<li>
    <a class="transition-all duration-300 hover:opacity-75" href="https://www.facebook.com/sharer/sharer.php?u={{url}}"
        target="_blank" rel="noreferrer">
        <p class="sr-only">Facebook</p>
        {{ function('icon', 'facebook', 'w-8 h-8') }}
    </a>
</li>

<li>
    <a class="transition-all duration-300 hover:opacity-75" href="http://twitter.com/share?text={{post.title}}&url={{url}}" target="_blank"
        rel="noreferrer">
        <p class="sr-only">Twitter</p>
        {{ function('icon', 'twitter', 'w-8 h-8') }}
    </a>
</li>

<li>
    <a class="transition-all duration-300 hover:opacity-75" href="https://www.linkedin.com/shareArticle?mini=true&url={{url}}&title={{post.title|url_encode}}"
        target="_blank" rel="noreferrer">
        <p class="sr-only">LinkedIn</p>
        {{ function('icon', 'linkedin', 'w-8 h-8') }}
    </a>
</li>
