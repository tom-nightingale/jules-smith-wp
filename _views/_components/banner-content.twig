<div class="relative {{containerClassNames}}">
    <div class="container">
        <div class="p-8 mx-auto font-sans text-center sm:p-12 lg:p-20">

            {% if intro %}
                <div class="mx-auto text-2xl font-bold lg:w-2/3 {{textClassNames}}">
                    {{intro}}
                </div>    
            {% endif %}

            {% if filterTitle %}
                <p class="mt-12 mb-2 font-bold text-white">{{filterTitle}}</p>
            {% endif %}

            {% if options %}
                <div class="flex flex-wrap items-center justify-center mt-8">

                    {% for item in options %}

                        {% if isFilters %}
                            <button
                                data-category="{{item.slug}}"
                                class="inline-block px-6 py-2 m-2 text-sm text-white transition duration-200 rounded-full  md:text-base {{loop.first ? 'bg-white text-teal-dark' : 'bg-white/10 hover:bg-white/20'}}">{{item.name}}</button>
                        {% else %}
                            <a href={item.slug}
                                class="inline-block px-6 py-2 m-2 text-sm text-white transition duration-200 rounded-full bg-white/10 hover:bg-white/20 md:text-base"
                                >{{item.name}}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
