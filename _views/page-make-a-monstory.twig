{% extends '_layout/base.twig' %}

{% block hero %}
	{% include "_views/_components/banner.twig" with {
		image: post.meta("banner_image").url
	} %}

	{% include "_views/_components/banner-content.twig" with {
		containerClassNames: "bg-yellow-dark",
		headline: post.banner_headline,
		intro: post.banner_content,
		makeAMonstory: true,
		price: post.price,
	} %}
{% endblock %}

{% block content %}

	<div class="py-8 lg:py-16">
		<div class="container">
			<div class="grid grid-cols-12">
				<div class="relative z-10 col-span-3 md:col-span-5 md:-mt-24 lg:-mt-32 xl:-mt-40">
					<div class="sticky top-0 md:relative md:h-full">
						<img class="relative top-0 object-cover object-right h-auto transition-all duration-500 rotate-45 lazyload -left-8 sm:-left-8 md:absolute md:left-auto md:right-0 md:h-full md:rotate-0 xl:left-1/2 xl:-translate-x-1/2" data-src="{{theme.link}}/_resources/images/thwibble.png" alt="Thwibble" />
					</div>
				</div>
				<div class="col-span-9 px-4 md:col-span-7 md:px-8">
					<h1>{{post.content_heading}}</h1>
					<div class="prose copy make-a-monstory">
						{{post.meta('content')}}
					</div>
				</div>
			</div>
		</div>
	</div>

	{% if post.meta('gallery') %}
	<div class="p-8 bg-blue-light">
		<div class="container">
			<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
				{% for image in post.meta('gallery') %}
				<div class="relative col-span-1 overflow-hidden group aspect-square">
					<img class="absolute top-0 left-0 object-cover object-center w-full h-full lazyload" data-src="{{image.sizes.medium_large}}" alt="{{image.alt}}" />
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	{% endif %}

	<div class="py-16 bg-yellow-dark">
		<div class="container">
			<div class="grid grid-cols-12">
				<div class="relative col-span-9 md:col-span-7">
					<div class="relative">
						<div
							class="absolute -top-4 left-4 z-20 flex h-[250px] w-[250px] items-center justify-center md:top-20">
							{{ function('icon', 'sticker-stroke', 'absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 w-full h-full text-yellow-dark w-[250px] lg:w-[300px] h-250px] lg:h-[300px]') }}
							<div class="relative z-10 px-6 font-sans font-bold text-center -rotate-12">
								<p class="text-xl">£{{post.price}}</p>
								<p class="uppercase">For 4 games in one pack!</p>
								<p>Please contact me for shipping prices outside of the UK</p>
							</div>
						</div>
						<div
							class="absolute left-0 -top-8 z-10 hidden h-[275px] w-[275px] items-center justify-center md:left-48 md:flex lg:left-64 lg:top-4">
							{{ function('icon', 'sticker', 'absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 w-full h-full text-blue-light w-[275px] lg:w-[350px] h-275px] lg:h-[350px]') }}
							<div class="relative z-10 px-6 font-sans font-bold text-center rotate-12">
								<img class="absolute -translate-x-1/2 -translate-y-1/2 shadow-lg lazyload top-1/2 left-1/2 max-w-32 rotate-3 lg:max-w-48"
									data-src="{{theme.link}}/_resources/images/thumb-cover.jpg" alt="Make a monstory" />
							</div>
						</div>
					</div>
	
					<div class="pl-4 mt-64 md:mt-96 lg:max-w-screen-md lg:py-20">
						<h1>{{post.meta("thump_heading")}}</h1>
						<div class="prose make-a-monstory">
							{{post.meta('thump_content')}}
						</div>
					</div>
				</div>
	
				<div class="relative z-10 col-span-3 md:col-span-5 md:-mt-24 lg:-mt-32 xl:-mt-40">
					<div class="sticky top-0 w-full h-auto overflow-hidden md:relative md:h-full">
						<img class="relative top-0 object-cover object-left h-auto transition-all duration-500 -rotate-45 lazyload -right-8 sm:-right-8 md:absolute md:left-auto md:right-0 md:h-full md:rotate-0 3xl:object-contain"
								data-src="{{theme.link}}/_resources/images/mabel.png" alt="Mabel" />
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="container">
		<div class="my-8 bg-blue-light">
			<div class="grid grid-cols-12">
				<div
					class="col-span-12 flex aspect-video items-center justify-center p-8 text-center md:col-span-7 lg:col-span-9 lg:aspect-[16/6]">
					<p class="font-sans text-4xl font-bold text-white uppercase md:text-6xl">
						Learning to read the monster fun way!
					</p>
				</div>
				<div
					class="relative hidden overflow-hidden border-l-[2rem] border-white md:col-span-5 md:block lg:col-span-3">
					<img class="absolute inset-0 object-cover object-top w-full h-full shadow-lg lazyload"
							data-src="{{theme.link}}/_resources/images/thumb-cover.jpg" alt="Thump Cover" />
				</div>
			</div>
		</div>
	</div>

	<div class="py-8 lg:py-16">
		<div class="container">
			<div class="grid grid-cols-12">
				<div class="relative z-10 col-span-3 md:col-span-5 md:-mt-24 lg:-mt-32 xl:-mt-40">
					<div class="sticky top-0 md:relative md:h-full">
						<img class="relative top-0 object-cover object-right h-auto transition-all duration-500 rotate-45 lazyload -left-8 sm:-left-8 md:absolute md:left-auto md:right-0 md:h-full md:rotate-0 xl:left-1/2 xl:-translate-x-1/2"
							data-src="{{theme.link}}/_resources/images/dumble.png" alt="Dumble" />
					</div>
				</div>
				<div class="col-span-9 px-4 md:col-span-7 md:px-8">
					<h1>{{post.rhyming_heading}}</h1>
					<div class="copy make-a-monstory">
						{{post.meta('rhyming_content')}}
					</div>
				</div>
			</div>
		</div>
	</div>


	{% if post.meta('reviews') %}
	<div class="container">
		<h2 class="mt-8 mb-8 text-center lg:mt-16">
			Read what our customers have to say!
		</h2>
		<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4">
			{% for review in post.meta('reviews') %}
				{% include "_views/_components/review-card.twig" with {
					name: review.name,
					position: review.position,
					content: review.content,
					background: review.background_colour,
				} %}			
			{% endfor %}
		</div>
		
		{% if ppst.reviewText %}
			<h2 class="max-w-screen-sm mx-auto mt-8 text-center text-blue lg:mt-16">
				{{post.reviewText}}
			</h2>
		{% endif %}
	
		<div class="mx-auto mt-16 text-center">
			<p class="text-lg font-script">
				Buy Make-A-Monstory for <span
					class="inline-block font-sans text-2xl font-bold -rotate-12 text-blue">£{{post.price}}</span>
				via Paypal
			</p>
			<a href="#paypal-button-container"
				class="inline-block px-4 py-2 mt-4 font-sans font-bold text-white uppercase transition duration-200 rounded-full bg-blue hover:bg-blue-600">Buy
				now on Paypal</a>
		</div>
	</div>
	{% endif %}

	<div class="pt-16 my-16 bg-yellow-dark">
		<img class="w-1/3 mx-auto lazyload sm:w-full sm:max-w-screen-xs" src="{{theme.link}}/_resources/images/thump.png"
			alt="Thump monster" />
	</div>

{% endblock %}
