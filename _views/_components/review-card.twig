<button class="flex aspect-video flex-col items-center justify-center sm:aspect-square bg-reviews-{{background}} p-4 text-center text-white transition-all duration-200 hover:opacity-90 lg:p-8">
    {% if name %}
        <h2 class="text-2xl">{{name}}</h2>
    {% endif %}
    <hr class="mx-auto h-1 w-[20%] border-none bg-white" />
    {% if position %}
    <p class="mt-8">{{position}}</p>
    {% endif %}
</button>
