

<div class="relative {{containerClassNames}}">
    <div class="container">
        <div class="p-8 mx-auto font-sans text-center sm:p-12 lg:p-20">

            {% if headline %}
                <p class="max-w-screen-md mx-auto mb-8 text-lg font-bold lg:text-2xl font-script">
                    {{headline}}
                </p>
            {% endif %}
            {% if intro %}
                <div class="mx-auto text-lg lg:text-2xl font-bold lg:w-2/3 {{textClassNames}}">
                    {{intro}}
                </div>    
            {% endif %}

            {% if filterTitle %}
                <p class="mt-12 mb-2 font-bold text-white">{{filterTitle}}</p>
            {% endif %}

            {% if options %}
                <div class="flex flex-wrap items-center justify-center mt-8">

                    {% for item in options %}

                        {% if isFilters %}
                            <button
                                data-category="{{item.slug}}"
                                class="inline-block px-6 py-2 m-2 text-sm transition duration-200 rounded-full book-filter inactive md:text-base">{{item.name}}</button>
                        {% else %}
                            <a href="{{site.url}}/blog/category/{{item.slug}}"
                                class="inline-block px-6 py-2 m-2 text-sm text-white transition duration-200 rounded-full bg-white/10 hover:bg-white/20 md:text-base"
                                >{{item.name}}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            {% if makeAMonstory %}
                <div class="mt-8">
                    <p class="text-lg font-script">
                        Buy Make-A-Monstory for <span
                            class="inline-block font-sans text-2xl font-bold -rotate-12 text-blue">Â£{{post.price}}</span>
                        via Paypal
                    </p>

                    {% include "_views/_components/paypal-button.twig" %}
                </div>
            {% endif %}

            {% if postCategory %}  
                <p
                    class="p-2 mb-4 text-xs font-bold uppercase text-orange md:absolute md:top-4 md:right-4 md:flex md:aspect-square md:h-32 md:w-32 md:rotate-12 md:flex-wrap md:items-center md:justify-center md:rounded-full md:bg-orange md:p-4 md:text-sm md:text-white">
                    {{postCategory}}
                </p>
            {% endif %}

            {% if postDate %}
            <p class="mt-8 text-sm">
                Posted on: {{postDate}}
            </p>
            {% endif %}
            
            {% if showComments %}
                <a href="#comments" class="inline-block mt-4 text-sm">
                    Go to comments
                    {{ function('icon', 'angle-down', 'w-4 h-4') }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
