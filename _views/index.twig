{% extends '_layout/base.twig' %}

{% block content %}

<div class="container flex flex-col my-8 lg:flex-row lg:my-16 lg:space-x-12">

  <main class="lg:w-2/3">
    
    {% for post in posts %}

      <article class="copy">

        <h1><a href="{{ function("get_permalink", post.ID)}}">{{post.title}}</a></h1>

        {{post.content}}

        <a href="{{ function("get_permalink", post.ID)}}">Read More</a>

      </article>  

    {% endfor %}        

  </main>

  <aside class="bg-gray-100 lg:w-1/3">
    {% include "_views/_components/sidebar--blog.twig" %}
  </aside>

</div>

{% endblock %}
