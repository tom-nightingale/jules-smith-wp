<a href={{link}} class="relative block overflow-hidden p-4 text-center font-sans text-sm font-bold uppercase leading-snug transition-colors duration-200 hover:text-teal sm:p-6 lg:text-xs xl:text-base {{current
    ? 'text-teal'
    : 'text-black'}}">
    {{label}}

    {% if current %}
        <div class="absolute {{isMobileViewport ? 'top-1/2 left-0 -translate-y-1/2' : '-transform-x-1/2 bottom-[10px] left-1/2'}} h-[6px] w-[6px] rounded-full bg-teal"></div>
    {% endif %}
</a>
