{# 
Custom picture, useful for any image. See bottom of this file for a full example.
 #}

<picture class="w-full {{ pictureClasses }}">

  {% for breakpoint, options in breakpoints %}
    
    <source
      type="image/webp"
      srcset="{{
        lazyload != false ? '' :
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        towebp
      }}"
      data-srcset="{{
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        towebp
      }}"
      media="(min-width: {{breakpoint}})"
    >
    
    <source
      type="image/jpeg"
      srcset="{{
        lazyload != false ? '' :
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        tojpg
      }}"
      data-srcset="{{
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        tojpg
      }}"
      media="(min-width: {{breakpoint}})"
    >

  {% endfor %}
	
    <source
      type="image/webp"
      srcset="{{
        lazyload != false ? '' :
        source|
        resize(
          img.w|default(640),
          img.h|default(640),
          img.crop|default('center')
          )|
        towebp
      }}"
      data-srcset="{{
        source|
        resize(
          img.w|default(640),
          img.h|default(640),
          img.crop|default('center')
          )|
        towebp
      }}"
    >
    
    <source
      type="image/jpeg"
      srcset="{{
        lazyload != false ? '' :
        source|
        resize(
          img.w|default(640),
          img.h|default(640),
          img.crop|default('center')
        )|
        tojpg
      }}"
      data-srcset="{{
        source|
        resize(
          img.w|default(640),
          img.h|default(640),
          img.crop|default('center')
        )|
        tojpg
      }}"
    >

  <img
    src="{{
      lazyload != false ? '' :
        source|
        tojpg|
        resize(
          img.w|default(640),
          img.h|default(640),
          img.crop|default('center')
        )
    }}"
    data-src="{{
      source|
      tojpg|
      resize(
        img.w|default(640),
        img.h|default(640),
        img.crop|default('center')
      )
    }}"
    alt="{{ img.alt|default(site.title) }}"
    class="{{ img.classes }}"
  >
</picture>

